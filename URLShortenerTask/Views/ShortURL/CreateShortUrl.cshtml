@model UrlEntity


<div class="jumbotron">

    <h1>URL Shortener</h1>

    <form asp-action="CreateShortUrl" method="post">
        <div class="form-horizontal">
            <div class="input-group input-group-lg">
                <input asp-for="Url" class="form-control" placeholder="Paste the URL to be shorten..." />
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit">Shorten URL</button>
                </span>
            </div>
        </div>
    </form>
</div>
